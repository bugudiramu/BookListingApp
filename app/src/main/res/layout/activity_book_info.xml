<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">
            <!--Image-->
            <ImageView
                android:layout_marginTop="16dp"
                android:id="@+id/info_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:src="@drawable/ic_launcher_background"
                android:contentDescription="@string/image_desc"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="32dp"/>
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/info_title"
                android:layout_toEndOf="@id/info_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="info title"
                android:paddingBottom="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:id="@+id/info_author"
                android:layout_toEndOf="@id/info_image"
                android:layout_below="@id/info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"

                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="info author"/>

            <TextView
                android:id="@+id/info_price"
                android:layout_toEndOf="@id/info_image"
                android:layout_below="@id/info_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="info price"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/info_rating"
                android:layout_toEndOf="@id/info_price"
                android:layout_below="@id/info_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="info rating"
                android:paddingBottom="4dp"
                />

            <Button
                android:id="@+id/buy_now_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_rating"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/info_image"
                android:gravity="center"
                android:text="@string/buy_it_now" />


        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/info_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting
        industry.
        Lorem Ipsum has been the industry\'s standard dummy text ever since the 1500s,
        when an unknown printer took a galley of type and scrambled it to make a type specimen book.
        It has survived not only five centuries, but also the leap into electronic typesetting,
        remaining essentially unchanged. It was popularised in the 1960s with the release
        of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop
        publishing
        software like Aldus PageMaker including versions of Lorem Ipsum."
            />

    </LinearLayout>

</LinearLayout>
</ScrollView>
